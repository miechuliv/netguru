//= form_for category, :html => {:class => "form-horizontal"} do |f|
= form_for category do |f|
  - if category.errors.any?
    #error_explanation
      %h2= "#{pluralize(category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - category.errors.full_messages.each do |msg|
          %li.text-danger= msg

  .form-group{:class => ("has-error" unless category.errors.count == 0)}
    = f.label :name
    = f.text_field :name, class: 'form-control'

  = f.submit 'Save', class: 'btn btn-default btn-lg'
